@using GamesCOM.Models;

@{
    ViewBag.Title = "viewCart";
}


@if(Session["sum"] == "0")
{
    <h2>Your Shopping cart is empty</h2>
}
@if (Session["sum"] != "0")
{
    <h2>Your Shopping Cart</h2>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Cart</title>

    </head>
    <body>
        <table width="350" height="200" cellpadding="1" cellspacing="1" border="1">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Remove</th>

            </tr>
            @foreach (var item in (List<Game>)Session["cart"])
            {
                <tr>
                    <td> @item.name</td>
                    <td> @item.price</td>
                    <td> <img src="@item.coverLink" height="100" width="75" /></td>
                    <td> @Html.ActionLink("Delete","Delete","shop",new { id = item.name },null)   </td>
                </tr>


            }

        </table>
        <h1>Total : @Session["sum"] NIS</h1>

        <br />

        @Html.ActionLink("continue shopping", "shophomepage", "shop")

        <br />
        @Html.ActionLink("CheckOut", "checkout", "shop")

    </body>
</html>
}

